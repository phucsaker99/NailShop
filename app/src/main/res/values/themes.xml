<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NailShop" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/red_berry</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/white</item>
        <item name="rippleColor">@color/whiteAlpha</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomChild" parent="CustomThemeParent">
        <item name="colorPrimaryDark">#ff0000</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomThemeParent">
        <item name="colorPrimaryDark">#ff4ff4</item>
        <item name="android:textColor">#3F51B5</item>
    </style>

    <style name="CustomTextTitle" >
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/teal_700</item>
    </style>

    <style name="CustomNameNail">
        <item name="android:background">@drawable/bg_name_nail</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/dp_4</item>
    </style>

    <color name="whiteAlpha">#BBB8B8</color>
</resources>
